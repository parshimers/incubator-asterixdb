<cluster xmlns="cluster">

	<!-- Name of the cluster -->
	<name>aggregate</name>

	<!-- username, which should be valid for all the three machines -->
	<username>imaxon</username>

	<!-- The working directory of Managix. It is recommended for the working
    directory to be on a network file system (NFS) that can accessed by
    all machines.
    Managix creates the directory if it it doesn't exist. -->
	<working_dir>
		<dir>/home/imaxon/managix-working-dfs/</dir>
		<NFS>true</NFS>
	</working_dir>

	<!-- Directory for Asterix to store log information for each machine.
    Needs to be on the local file system of each machine.
    Managix creates the directory if it doesn't exist.
    This property can be overriden for a node by redefining at the node level. -->
	<log_dir>/home/imaxon/managix-working-dfs/logs</log_dir>
	<txn_log_dir>mnt/data/sdb/imaxon/scratch/tx_logs-blah</txn_log_dir>
	<!-- Mount point of an iodevice. Use a comma separated list for a machine that
    has multiple iodevices (disks).
    This property can be overriden for a node by redefining at the node level. -->
	<iodevices>/mnt/data/sdb/imaxon/scratch/</iodevices>

	<!-- Path on each iodevice where Asterix will store its data -->
	<store>/storage-master</store>

	<!-- Java home for each machine -->
	<java_home>/mnt/data/sdb/imaxon/jdk1.8.0_77</java_home>

	<!-- IP addresses of the master machine A -->
	<master_node>
		<id>6-cc</id>
		<client_ip>sensorium-26</client_ip>
		<cluster_ip>sensorium-26</cluster_ip>
		<client_port>1098</client_port>
		<cluster_port>1099</cluster_port>
		<http_port>8888</http_port>
	</master_node>
	<node>
		<id>asterix6</id>
		<cluster_ip>sensorium-26</cluster_ip>
		<txn_log_dir>/mnt/data/sdb/imaxon/scratch/tx_logs-6</txn_log_dir>
	</node>
	<node>
		<id>asterix7</id>
		<cluster_ip>sensorium-27</cluster_ip>
		<txn_log_dir>/mnt/data/sdb/imaxon/scratch/tx_logs-7</txn_log_dir>
	</node>
	<node>
		<id>asterix8</id>
		<cluster_ip>sensorium-28</cluster_ip>
		<txn_log_dir>/mnt/data/sdb/imaxon/scratch/tx_logs-8</txn_log_dir>
	</node>
	<node>
		<id>asterix9</id>
		<cluster_ip>sensorium-29</cluster_ip>
		<txn_log_dir>/mnt/data/sdb/imaxon/scratch/tx_logs-9</txn_log_dir>
	</node>
</cluster>

